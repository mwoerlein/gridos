>
Dies ist das TEXTSEGMENT fuer den GridOS-MicroKernel "< @@ >"
<
cga_lastline := 0xb8f00
_start:
    jmp _init
buffer: nop; nop; nop; nop
_init:
    movl cga_lastline, %eax
    addl 0x4a, %eax
    movl buffer, %ecx
    movl drawGT, (%ecx)
    movl drawLT, %edx
    jmp %edx
_halt:
    hlt
    jmp _halt
drawLT:
    movw 0x73c, (%eax)
    addl 4, %eax
    jmp drawAT
drawGT:
    addl 4, %eax
    movw 0x73e, (%eax)
    jmp _halt
drawAT:
    movw 0xf40, (%eax)
    addl 2, %eax
    movw 0xf40, (%eax)
    jmp (%ecx)
