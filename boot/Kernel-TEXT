>
Dies ist das TEXTSEGMENT fuer den GridOS-MicroKernel "Blinking"
<
cga_lastline := 0xb8f00
_start:
    movl 0, %ebx // column = 0
    movl 0, %ecx // charOffset = 0
// inject not yet supported instructions
    movw 0xf975, (JNZ)
    
blinking_loop:
    // charTmp = charOffset
    movl %ecx, %eax
    
    // show 'a'+charOffset at column
    addl 0x761, %ecx
    movw %cx, cga_lastline(,%ebx,2)
    
    // charOffset = (charTmp + 1) % 26
    addl 1, %eax
    movl 26, %ecx
    divb %cl; movb %ah, %cl
    //divw %cx; movw %dx, %cx
    //divl %ecx; movl %edx, %ecx
    
    // column = (column + 1) % 80
    movl %ebx, %eax
    addl 1, %eax
    movl 80, %ebx
    divb %bl; movb %ah, %bl
    //divw %bx; movw %dx, %bx
    //divl %ebx; movl %edx, %ebx
    
    // wait a bit
    movl 0x3fffff, %eax    
wait:
    addl -1, %eax
//    jnz wait
JNZ: nop; nop
    // endless loop
    jmp blinking_loop
